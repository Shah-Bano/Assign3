{
    "kind": "collectionType",
    "collectionName": "blog_posts",
    "info": {
        "singularName": "blog-post",
        "pluralName": "blog-posts",
        "displayName": "Blog Post"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "postTitle": {
            "type": "string",
            "required": true
        },
        "blogContent": {
            "type": "text",
            "required": true
        },
        "blogPostedDate": {
            "type": "date"
        },
        "slug": {
            "type": "string",
            "required": true
        },
        "media": {
            "allowedTypes": [
                "images",
                "files"
            ],
            "type": "media",
            "multiple": true
        }
    }
}
